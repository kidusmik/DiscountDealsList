<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiscountDealsList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">@color/fui_transparent</item>-->
        <item name="android:windowLightStatusBar" >true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="floatingActionButtonStyle">
            @style/Theme.Enney.Widget.MaterialComponents.FloatingActionButton
        </item>
        <item name="android:colorBackground">@color/background_color_app</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Theme.DiscountDealsList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Enney.TextAppearance.AppCompat.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/_28ssp</item>

    </style>

    <style name="Theme.Enney.Widget.MaterialComponents.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.Enney.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/app_name</item>
    </style>

    <style name="Theme.Enney.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Enney.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>